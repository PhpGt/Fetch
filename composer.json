{
	"name": "phpgt/fetch",
	"description": "Asynchronous HTTP client with promises.",
	"type": "library",
	"license": "MIT",

	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"phpgt/async": "dev-master",
		"phpgt/promise": "^2.2.1",
		"phpgt/http": "^1.1",
		"phpgt/curl": "^3.1.1",
		"phpgt/json": "^1.2",
		"phpgt/propfunc": "^1.0"
	},

	"require-dev": {
		"phpstan/phpstan": "^1.10",
		"phpunit/phpunit": "^10.2",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Fetch\\": "./src"
		}
	},

	"autoload-dev": {
		"psr-4": {
			"Gt\\Fetch\\Test\\": "./test/phpunit"
		}
	},

	"authors": [
		{
			"name": "Greg Bowler",
			"email": "greg.bowler@g105b.com"
		}
	],

	"keywords": [
		"http-client",
		"http",
		"fetch",
		"async",
		"asynchronous",
		"xmlhttprequest",
		"ajax",
		"get",
		"post",
		"curl",
		"curl_multi"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
